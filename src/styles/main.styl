.navbar-toggler.active .icon-bar:nth-of-type(1)
  transform rotate(45deg)
  top 0

.navbar-toggler.active .icon-bar:nth-of-type(2)
  opacity 0

.navbar-toggler.active .icon-bar:nth-of-type(3)
  transform rotate(-45deg)
  top 2px

