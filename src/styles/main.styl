//outline fix
input
textarea
  resize none
  &:focus
    outline none!important
    box-shadow none!important

button
.btn
a
  display inline-block
  color inherit
  text-decoration none
  &:hover
  &:focus
    outline none
    color inherit
    text-decoration none
    box-shadow none

button
  padding 0
  border 0

ul
  padding 0
  margin 0
  list-style none

//bootstrap macOs fix
.row
  &::before
  &::after
